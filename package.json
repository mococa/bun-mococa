{
  "name": "bun-mococa",
  "version": "1.0.0",
  "description": "Bun/Elysia API server with authentication, payments, and AWS integration",
  "main": "src/main.ts",
  "scripts": {
    "prestart": "docker compose up -d",
    "prepare:dist": "mkdir -p ./dist",
    "prepare:migrations": "mkdir -p ./dist/migrations && cp -R ./src/db/migrations/* ./dist/migrations 2>/dev/null || true",
    "prepare": "bun run prepare:dist && bun run prepare:migrations",
    "prod": "bun run build && bun --cwd=dist/ --env-file=.env run main.js",
    "start": "bun run src/main.ts",
    "predev": "docker compose up -d",
    "dev": "bun --watch src/main.ts",
    "build": "bun run prepare && bun build src/main.ts --outdir ./dist --target bun",
    "setup:daemon": "sudo cp {{project-name}}-api.service /etc/systemd/system/ && sudo systemctl daemon-reload && sudo systemctl enable {{project-name}}-api",
    "prerestart": "bun run build && bun run setup:daemon",
    "restart": "docker compose up -d --build --no-deps api && docker compose restart cloudflared",
    "restart:systemd": "systemctl restart {{project-name}}-api",
    "logs": "docker logs -f {{project-name}}-api",
    "logs:redis": "docker logs -f {{project-name}}-redis",
    "logs:tunnel": "docker logs -f {{project-name}}-cloudflared",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "fmt": "biome check --fix"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@sinclair/typebox": "^0.34.41",
    "abacatepay-nodejs-sdk": "^1.6.0",
    "biome": "^0.3.3",
    "discord.js": "^14.15.0",
    "drizzle-orm": "^0.44.6",
    "elysia": "^1.4.12",
    "elysia-rate-limit": "^4.4.2",
    "memjs": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}